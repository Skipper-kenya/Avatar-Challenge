@model Avatar_Challenge.Models.AvatarModel

@{
    ViewData["Title"] = "Create Avatar";
}

<h2 class="mb-4">Create an Avatar</h2>

<form asp-action="CreateChallenge" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="FullNames" class="form-label">Full Names</label>
        <input asp-for="FullNames" class="form-control" placeholder="Enter full name" required />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" required />
    </div>

    <div class="mb-3">
        <label asp-for="RegistrationNumber" class="form-label">Registration Number</label>
        <input asp-for="RegistrationNumber" class="form-control" placeholder="Enter registration number" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Upload Avatar</label>
        <input type="file" name="FormFile" class="form-control" accept="image/*" required />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
