@model List<Avatar_Challenge.Models.AvatarModel>
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <p class="display-6">Avatar Challenge</p>
</div>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <form asp-action="CreateChallenge" method="get">
        <button class="btn btn-primary me-md-2" type="submit">Add a Challenge</button>
    </form>
</div>

<div class="row">
    @foreach (var avatar in Model)
    {
        <div class="col">
            <div class="card" style="width: 18rem;">
                <div class="d-flex justify-content-center">
                    <img src="@Url.Content("~/uploads/" + avatar?.AvatarName)" class="card-img-top" style="border-radius:20%;width:250px;height:250px;" alt="...">
                </div>
                <div class="card-body">
                    <p class="lead">@avatar?.Email</p>
                    <p class="lead">@avatar?.FullNames</p>

                    <div class="d-flex justify-content-end">
                        <a href="@Url.Action("DeleteAvatar","Home", new {id = avatar?.Id})" role="button" class="btn btn-outline-primary" style="margin-right:2px;"><i class="bi bi-pencil-fill"></i></a>
                        <a href="@Url.Action("DeleteAvatar","Home", new {id = avatar?.Id})" role="button" class="btn btn-outline-danger"><i class="bi bi-trash3"></i></a>
                    </div>

                </div>
            </div>
        </div>

    }
</div>

